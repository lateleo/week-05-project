<div class="container">
  <a href="/base_classes/<%= @base_class.id %>"><< Back to
    <%= @base_class.name %>
  </a>

  <h1><%= @base_class.name %>: Remove Abilities</h1>

  <div class="row">
    <div class="col-md-10">
      <form class="form-horizontal" method="post",
        action="/base_classes/<%= @base_class.id %>/remove_abilities">

        <div class="row">
          <div class="col-md-12">
            <p><b>Abilities:</b></p>
            <table class="table table-striped table-condensed">
              <tbody>
                <% @abilities.each do |ability| %>
                  <tr>
                    <td>
                      <input type="checkbox" name="<%=ability.name%>",
                        value="<%=ability.name%>">
                    </td>
                    <td>
                      <a href="/abilities/<%= ability.id %>">
                        <%= ability.name %></a>:
                    </td>
                    <td><%= ability.in_game_effect %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-md-5">
            <input type="hidden" name="_method" value="unlink">
            <input type="submit" class="btn btn-default",
              value="Remove Selected Abilities">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
