<div class="container">
  <a href="/base_classes"><< Back to <%= @base_class.name %></a>

  <h1><%= @base_class.name %>: Add Abilities</h1>

  <div class="row">
    <div class="col-md-10">
      <form class="form-horizontal" method="post"
        action="/base_classes/<%= @base_class.id %>/edit_abilities">

        <div class="row">
          <div class="col-md-12">
            <p><b>Abilities:</b></p>
            <table class="table table-striped table-condensed">
              <tbody>
                <% @abilities.each do |ability| %>
                  <% @base_class.abilities.include?(ability) ?
                    checked="checked" : checked="" %>
                  <tr>
                    <td>
                      <input type="checkbox" name="<%= ability.name %>"
                        value="<%= ability.name %>" <%= checked %>>
                    </td>
                    <td>
                      <a href="/abilities/<%= ability.id %>">
                        <%= ability.name %></a>:
                    </td>
                    <td><%= ability.in_game_effect %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-md-5">
            <input type="submit" value="Update <%= @base_class.name %> Abilities"
              class="btn btn-default">
          </div>
        </div>
      </form>
