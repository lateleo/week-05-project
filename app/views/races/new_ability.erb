<% if @race %>
  <a href="/races/<%= @race.id %>"><< Back to <%= @race.name %></a>
  <h1><%= @race.name %>: New Racial Ability</h1>

  <% if @racial_ability.errors.any? %>
    <p><% @racial_ability.errors.full_messages.each do |m| %>
      Error: <%= m %></br>
    <% end %></p>
  <% end %>

  <form action="/races/<%= @race.id %>/abilities/new" method="post">
    Name: <input type="text" name="name" value="<%= @racial_ability.name %>"></br>
    Cooldown: <input type="text" name="cooldown" value="<%= @racial_ability.cooldown %>"></br>
    In-Game Effect:</br><textarea name="in_game_effect" rows="10" cols="75"><%= @racial_ability.in_game_effect %></textarea></br>
    Flavor Text:</br><textarea name="flavor_text" rows="10" cols="75"><%= @racial_ability.flavor_text %></textarea></br>
    <input type="submit" value="Create Racial Ability">
  </form>
<% else %>
  <h1>Error</h1>
  <p>No race with that ID exists.</p>
<% end %>
