
<a href="/">DnPnZ Home</a> >
  <b>Races</b>

<h1>Races</h1>

<p>
  <% if @races.any? %>
    <div class="row">
      <div class="col-md-8">
        <table class="table table-striped table-condensed">
          <tbody>
            <% @races.each do |race| %>
              <tr>
                <td>
                  <a href="/races/<%= race.id %>">
                    <%= race.name %>
                  </a>
                </td>
                <td><%= race.flavor_text %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <em>(No races have been created.)</em>
  <% end %>
</p>

<a href="/races/new">New Race</a>
