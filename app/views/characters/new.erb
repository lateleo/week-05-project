<h1>New Character</h1>

<% if @character.errors.any? %>
  <p><% @character.errors.full_messages.each do |m| %>
    Error: <%= m %></br>
    <% end %></p>
<% end %>

<form class="form-horizontal" action="/characters/new" method="post">

  <div class="row">
    <div class="col-md-6">
      <%#= Name and Age%>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="name" class="col-md-4 control-label">Name:</label>
            <div class="col-md-8">
              <input type="text" class="form-control" name="name",
                  id="name" value="<%= @character.name %>">
            </div>
          </div>
          <div class="form-group">
            <label for="age" class="col-md-4 control-label">Age:</label>
            <div class="col-md-2">
              <input type="text" class="form-control" name="age",
                id="age" value="<%= @character.age %>">
            </div>
          </div>
        </div>
      </div>

      <div class="row">

        <%#= Stats %>
        <div class="col-md-4">
          <p><b>Stats:</b></p>
          <table class="table table-striped table-condensed">
            <tbody>
              <% @character.stats.each do |key, stat| %>
                <tr>
                  <td><label for="<%=stat%>"><%=key%>:</label></td>
                  <td>
                    <input type="text" name="<%=stat%>" size="4",
                      value="<%=@character.send(stat)%>", id="<%=stat%>">
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%#= Class and Race %>
        <div class="col-md-4 col-md-offset-2">

          <div class="form-group">
            <label for="race_id">Race:</label>
            <select name="race_id" id="race_id" class="form-control">
              <option selected disabled>Choose One:</option>
              <% @races.each do |race| %>
                <% race.id == @character.race_id ?
                  selected = "selected" : selected = "" %>
                <option value="<%=race.id%>",
                   <%=selected%>><%= race.name %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="base_class_id">Class:</label>
            <select name="base_class_id" id="base_class_id",
              class="form-control">
              <option selected disabled>Choose One:</option>
              <% @base_classes.each do |base_class| %>
                <% base_class.id == @character.base_class_id ?
                  selected = "selected" : selected = "" %>
                <option value="<%= base_class.id %>",
                  <%=selected%>><%= base_class.name %></option>
              <% end %>
            </select>
          </div>
        </div>

      </div>

      <%#= Backstory %>
      <div class="row">
        <div class="col-md-12">
          <p>
            <b>Backstory:</b>
            <textarea name="backstory" class="form-control",
              rows="6"><%= @character.backstory %></textarea>
          </p>
        </div>
      </div>

      <%#= Submit Button %>
      <div class="row">
        <div class="col-md-12">
          <input type="submit" class="btn btn-default",
            value="Create New Character">
        </div>
      </div>

    </div>

    <div class="col-md-6">

      <% @races.each do |race| %>
        <div style='display:none;' id="<%= race.id %>_racials" class="col-md-12">
          <table class="table table-striped table-condensed">
            <tbody>
              <p><b>Racial Abilities: <%= race.name %></b></p>
              <th> </th>
              <th>Name</th>
              <th>In-Game Effect</th>
            </tr>
              <% race.racial_abilities.order(:name).each do |ra| %>
                <tr>
                  <td><input type="radio" name="racial_ability_id",
                      value="<%= ra.id %>"></td>
                  <td><%= ra.name %></td>
                  <td><%= ra.in_game_effect %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>


        <script>
          $(document).ready(function(){
            $('#race_id').on('change', function() {
              if ( this.value == <%= race.id %>)
                {
                  $("#<%= race.id %>_racials").show();
                }
              else
                {
                  $("#<%= race.id %>_racials").hide();
                }
            });
          });
        </script>
      <% end %>

      <% @base_classes.each do |base_class| %>
        <div style='display:none;' id="<%= base_class.id %>_abilities",
          class="col-md-12">
          <table class="table table-striped table-condensed">
            <tbody>
              <p><b>Class Abilities: <%= base_class.name %></b></p>
              <tr>
                <th>1</th>
                <th>2</th>
                <th>Name</th>
                <th>In-Game Effect</th>
              </tr>
              <% base_class.abilities.order(:name).each do |a| %>
                <tr>
                  <td><input type="radio" name="ability_id1",
                      value="<%= a.id %>" id="<%=a.id%>a1"></td>
                  <td><input type="radio" name="ability_id2",
                      value="<%= a.id %>" id="<%=a.id%>a2"></td>
                  <td><%= a.name %></td>
                  <td><%= a.in_game_effect %></td>
                </tr>
                <script>
                </script>
              <% end %>
            </tbody>
          </table>
        </div>


        <script>
          $(document).ready(function(){
            $('#base_class_id').on('change', function() {
              if ( this.value == <%= base_class.id %>)
                {
                  $("#<%= base_class.id %>_abilities").show();
                }
              else
                {
                  $("#<%= base_class.id %>_abilities").hide();
                }
            });
          });

          $("input").change(function(){
            i= $(this).index();
            sibling =  $(this).parent()
              .siblings()
              .find("input")
              .eq(i);
            if (sibling.is(":checked"))
              $(this).removeAttr("checked");
          });
        </script>
      <% end %>

    </div>
  </div>

</form>
