
<a href="/">DnPnZ Home</a> >
  <a href="/prestige_classes">Prestige Classes</a> >
    <a href="/prestige_classes/<%= @prestige_class.id %>">
    <%= @prestige_class.name %></a> >
      <b>Add Abilities</b>

<h1><%= @prestige_class.name %>: Add Abilities</h1>

<div class="row">
  <div class="col-md-10">
    <form class="form-horizontal" method="post"
      action="/prestige_classes/<%= @prestige_class.id %>/add_abilities">

      <div class="row">
        <div class="col-md-12">
          <p><b>Abilities:</b></p>
          <table class="table table-striped table-condensed">
            <tbody>
              <% @abilities.each do |ability| %>
                <tr>
                  <td>
                    <input type="checkbox" name="<%= ability.name %>"
                      value="<%= ability.name %>">
                  </td>
                  <td>
                    <a href="/abilities/<%= ability.id %>">
                      <%= ability.name %></a>:
                  </td>
                  <td><%= ability.in_game_effect %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-md-5">
          <input type="hidden" name="_method" value="link">
          <input type="submit" value="Add Selected Abilities"
            class="btn btn-default">
        </div>
      </div>
    </form>
  </div>
</div>
